Host *
  User jphenow
  ForwardAgent yes
  TCPKeepAlive yes
  ServerAliveInterval 5
  ServerAliveCountMax 12

Host *.amazonaws.com
  UserKnownHostsFile /dev/null
  StrictHostKeyChecking no

Host jpdo
  User jonphenow
  Hostname jphenow.com

Host *
  AddKeysToAgent yes
  UseKeychain yes
  IdentityFile ~/.ssh/id_rsa
  # IdentityFile ~/.ssh/ms_id_rsa

# GITHUB

Host gh
  User git
  Port 22
  Hostname github.com
  TCPKeepAlive yes
  IdentitiesOnly yes
Host bastion*.githubapp.com vault-bastion*.githubapp.com
  ForwardAgent yes
  User jphenow
  IdentityFile ~/github/ssh/id_rsa
  ControlMaster auto
  ControlPath ~/.ssh/sockets/%C
  ControlPersist 600
Host github.com *.github.net *.githubapp.com
  ForwardAgent no
  User jphenow
  IdentityFile ~/github/ssh/id_rsa
